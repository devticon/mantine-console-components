{
  "compilerOptions": {
    "esModuleInterop": true,
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "target": "ES2022",
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "outDir": "./dist",
    "jsx": "react-jsx"
  },
  "exclude": ["node_modules"],
  "include": ["lib"]
}
